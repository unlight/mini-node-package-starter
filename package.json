{
  "name": "mini-node-package-starter",
  "version": "0.0.0-dev",
  "description": "",
  "keywords": [],
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "test": "npm run eslint && npm run test:r",
    "test:r": "glob -c \"node --import tsx --test\" src/**/*.spec.mts",
    "test:w": "glob -c \"node --import tsx --test --watch\" src/**/*.spec.mts",
    "eslint": "node node_modules/eslint/bin/eslint \"src/**/*.{ts,tsx}\"",
    "eslint:w": "watchexec --clear -w src -e ts,tsx,mts npm run eslint",
    "eslint:fix": "npm run eslint -- --fix",
    "tscheck": "tsc --noEmit",
    "tscheck:w": "npm run tscheck -- --watch",
    "prebuild": "rm -rf dist",
    "build": "pkgroll --target=es2020"
  },
  "peerDependencies": {
    "reflect-metadata": "^0.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.7.0",
    "@types/node": "^20.14.12",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "expect": "^29.7.0",
    "glob": "^11.0.0",
    "globals": "^15.8.0",
    "node-watchexec": "github:longdog/node-watchexec",
    "pkgroll": "^2.4.1",
    "prettier": "^3.3.3",
    "reflect-metadata": "^0.2.2",
    "request": "^2.88.2",
    "ts-node": "^10.9.2",
    "tslib": "^2.6.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^7.17.0",
    "watchexec-bin": "^1.0.0"
  }
}
