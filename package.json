{
  "name": "mini-node-package-starter",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "license": "MIT",
  "type": "module",
  "main": "./cjs/index.js",
  "module": "./mjs/index.mjs",
  "exports": {
    ".": {
      "import": "./mjs/index.mjs",
      "require": "./cjs/index.js"
    }
  },
  "scripts": {
    "test": "npm run eslint && npm run test:r",
    "test:r": "node --experimental-specifier-resolution=node --loader ts-node/esm ./node_modules/xv/lib/bin src/index.spec.ts",
    "test:w": "watchexec -w src \"npm run --silent test:r\"",
    "eslint": "node node_modules/eslint/bin/eslint \"src/**/*.{ts,tsx}\"",
    "eslint:w": "watchexec -w src \"npm run eslint\"",
    "eslint:fix": "npm run eslint -- --fix",
    "tscheck": "tsc --noEmit",
    "tscheck:w": "npm run tscheck -- --watch",
    "prebuild": "rm -rf dist",
    "build": "npm run build:1 && npm run build:2 && npm run build:3 && npm run build:4 && npm run build:5 && npm run build:6",
    "build:1": "npx tsup src/index.ts -d=dist/mjs --keep-names --platform=node --format=esm --target=es2020 --external=reflect-metadata --sourcemap",
    "build:3": "npx tsup src/index.ts -d=dist/cjs --keep-names --platform=node --format=cjs --target=es2020 --external=reflect-metadata --sourcemap",
    "build:2": "echo {\"type\": \"module\"} > dist/mjs/package.json",
    "build:4": "echo {\"type\": \"commonjs\"} > dist/cjs/package.json",
    "build:5": "cp -fv README.md LICENSE dist",
    "build:6": "cat package.json | jq \"del(.type)\" >dist/package.json"
  },
  "devDependencies": {
    "@swc/core": "^1.2.160",
    "@swc/helpers": "^0.3.8",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-only-warn": "^1.0.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^41.0.1",
    "expect": "^27.5.1",
    "prettier": "^2.6.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3",
    "watchexec-bin": "^1.0.0",
    "xv": "^1.1.1"
  }
}
